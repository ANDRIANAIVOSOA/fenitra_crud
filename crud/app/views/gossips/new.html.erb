<%= render "layouts/header" %>
<form action="/gossips" method="post">
    <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">
    <div class="form-group">
        <label for="inputdefault">Name</label>
        <input class="form-control" id="inputdefault" type="text" name="author" required="true">
    </div>
    <div class="form-group">
        <label for="inputlg">Content</label>
        <input class="form-control input-lg" id="inputlg" type="text" name="content" required="true">
    </div>
    <div class="form-group">
        <input class="form-control btn btn-primary" type="submit" name="valider" value="create">
    </div>
</form> 
